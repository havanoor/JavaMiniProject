			//Database
				String query=String.format("select id,name,COALESCE(img1,''),COALESCE(img2,''),COALESCE(img3,''),specs,small_description,long_description from mission2 where name='%s' ",vs)  ;
				System.out.println(query);
				Connection c1=DatabaseConnect.mkconnection() ;
				Statement st=c1.createStatement();
				ResultSet rs=st.executeQuery(query);
						
				rs.next();
				lblMissiondetails.setText(rs.getString(2));
